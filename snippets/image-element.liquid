<div class="image-with-text__media image-with-text__media--{{ section.settings.height }} {% if block.settings.image_bottom != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
     {% if section.settings.height == 'adapt' and block.settings.image_bottom != blank %} style="padding-bottom: {{ 1 | divided_by: block.settings.image_bottom.aspect_ratio | times: 100 }}%;"{% endif %}
     >

  {%- if block.settings.image_bottom != blank -%}
  <img
       srcset="{%- if block.settings.image_bottom.width >= 165 -%}{{ block.settings.image_bottom | img_url: '165x' }} 165w,{%- endif -%}
               {%- if block.settings.image_bottom.width >= 360 -%}{{ block.settings.image_bottom | img_url: '360x' }} 360w,{%- endif -%}
               {%- if block.settings.image_bottom.width >= 535 -%}{{ block.settings.image_bottom | img_url: '535x' }} 535w,{%- endif -%}
               {%- if block.settings.image_bottom.width >= 750 -%}{{ block.settings.image_bottom | img_url: '750x' }} 750w,{%- endif -%}
               {%- if block.settings.image_bottom.width >= 1070 -%}{{ block.settings.image_bottom | img_url: '1070x' }} 1070w,{%- endif -%}
               {%- if block.settings.image_bottom.width >= 1500 -%}{{ block.settings.image_bottom | img_url: '1500x' }} 1500w,{%- endif -%}
               {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.image_bottom }}w"
       src="{{ block.settings.image | img_url: '1500x' }}"
       sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
       alt="{{ block.settings.image.alt | escape }}"
       loading="lazy"
       width="{{ block.settings.image.width }}"
       height="{{ section.settings.image.height }}"
       >
  {%- else -%}
  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}

</div>