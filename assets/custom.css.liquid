/* font family */
@font-face {
  font-family: 'Avenir LT Std';
  src: url('AvenirLTStd-Black.eot');
  src: url('AvenirLTStd-Black.eot?#iefix') format('embedded-opentype'),
    url('AvenirLTStd-Black.woff2') format('woff2'),
    url('AvenirLTStd-Black.woff') format('woff'),
    url('AvenirLTStd-Black.ttf') format('truetype'),
    url('AvenirLTStd-Black.svg#AvenirLTStd-Black') format('svg');
  font-weight: 900;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'Avenir LT Std';
  src: url('AvenirLTStd-Book.eot');
  src: url('AvenirLTStd-Book.eot?#iefix') format('embedded-opentype'),
    url('AvenirLTStd-Book.woff2') format('woff2'),
    url('AvenirLTStd-Book.woff') format('woff'),
    url('AvenirLTStd-Book.ttf') format('truetype'),
    url('AvenirLTStd-Book.svg#AvenirLTStd-Book') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'Avenir LT Std';
  src: url('AvenirLTStd-Roman.eot');
  src: url('AvenirLTStd-Roman.eot?#iefix') format('embedded-opentype'),
    url('AvenirLTStd-Roman.woff2') format('woff2'),
    url('AvenirLTStd-Roman.woff') format('woff'),
    url('AvenirLTStd-Roman.ttf') format('truetype'),
    url('AvenirLTStd-Roman.svg#AvenirLTStd-Roman') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

body{
  font-family: 'Avenir LT Std';
  font-weight:400;
  font-size:12px; 
  line-height:14px;
  color:#44444D;
}
h1, h2, h3, h4, h5, h6{
  font-family: 'Avenir LT Std';
}

.h1, h1{
  font-size:24px;
  font-weight:500;
}
h2{
  font-size:19px;
  font-weight:400;
}
h3{
  font-size:17px;
  font-weight:400;
}
h4{
  font-size:15px;
  font-weight:500;
}
h5{
  font-size:12px;
  font-weight:500;
}
h6{
  font-size:12px;
  font-weight:400;
}
p{
  margin:0;
  padding:0;
  color:#44444D;
  font-size:12px;
  line-height:14px;
  font-weight:400;
  letter-spacing:0;
}




/* placeholder  */
::-webkit-placeholder {
  color: #44444D;
}
::-moz-placeholder {
  color: #44444D;
}
::-ms-placeholder {
  color: #44444D;
}
::placeholder { 
  color: #44444D;
  opacity: 1;
}





/*  announcement bar start */
#shopify-section-announcement-bar .announcement-bar__message{
  font-family: 'Avenir LT Std';
  font-weight:400;
  font-size:12px;
  color:#44444D;
  line-height:16.39px;
  letter-spacing:0;
}
#shopify-section-announcement-bar .announcement-bar__message span{
  font-weight:900;
}

/* header */
.header{ 
  display:flex;
  justify-content:center;
}
.header .search-area-con{
  width:60%;
  margin:0 auto; 
}
.header__inline-menu .header__menu-item{
  font-weight:800;
  font-size:12px;
  color:#fff;
  line-height:18px;
}
.header__inline-menu .header__menu-item:hover,
.header__inline-menu .header__menu-item:focus{
  color:#F5694D;
}
.customer a:hover, .link:hover{
  text-underline-offset:unset;
}
.header .header__menu-item:hover span{
  text-decoration:unset;
}
.header__search .search .search__input{
  background:#fff;
  -webkit-border-radius:5px;
  -moz-border-radius:5px;
  -o-border-radius:5px;
  -ms-border-radius:5px;
  border-radius:5px;
  box-shadow:none;
  color:#44444D;
  font-size:16px;
  font-weight:300;
}
.header__search .search .search__button svg{
  color:#44444D;
}
.customer .field input:autofill, .customer 
.field input:focus, .customer 
.field input:not(:placeholder-shown), 
.field__input:autofill, .field__input:focus, 
.field__input:not(:placeholder-shown){
  padding:1.2rem 1.5rem .8rem;
}

/* main banner */
.swiper-wrapper{
  height:338px !important;
} 
.swiper .two-block-section{
  display:flex;
  height:100%;
}
.two-block-section .banner__media.media{
  width:50%;
  order:2;
  position:unset;
}
.two-block-section .banner__media.media img{
  position:unset;
}
.two-block-section .banner__content{
  width:50%;
  order:1;
  background:#FFF9EE;
}
.two-block-section .banner__content .banner__box{
  text-align:left;
}
.swiper .two-block-section .banner__heading.h1{
  color:#153A33;
  font-size:50px;
  font-weight:900;
  line-height:50px;
  letter-spacing:0;
}
.swiper .two-block-section .banner__text{
  color:#44444D;
  font-size:16px;
  font-weight:300;
  line-height:22px;
  letter-spacing:0;
}


@media screen and (min-width: 750px) {
  .banner--large:not(.banner--adapt) {
    min-height: unset !important;
  }
}






.search-focused{
  width:100%;
}
.header__search{ width:100%;}
.search-modal__form{
  max-width:unset;
}
.search-modal__content{
  width:100%;
  padding:0;
}






/* cart items */
.cart__item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-bottom: 1px solid;
  border-bottom-color: #333;
  border-bottom-color: var(--colorBorder);
    width:335px;
    }
.site-header__cart .cart__image {
  flex: 0 0 100px;
  margin-right: 10px;
  width:25%;
}
.cart__item-details {
  flex: 1 1 auto;
  display: flex;
  flex-wrap: wrap;
  width:calc(75% - 15px);
  margin-left:15px;
}
.cart__item-title {
  display:flex;
  justify-content: space-between; 
}
.cart__item-sub {
  flex: 1 1 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.js-qty__wrapper {
  display: inline-block;
  position: relative;
  max-width: 70px;
  min-width: 60px;
  overflow: visible;
  background-color: #fff;
  background-color: var(--colorBody);
    color: #000;
    color: var(--colorTextBody);
      }
.cart__item .cart__item-name{
  color:#44444D;
  font-size:16px;
  font-weight:300;
  line-height:16px;
}
.cart__item .brand, .cart__item .size{
  color:#44444D;
  font-size:15px;
  font-weight:300;
  line-height:20px;
  padding-top:10px;
}
.cart__item .cart-item--remove-link svg{
  width:24px;
  height:24px;
  color:#44444D;
}
.cart__item .cart__item-title-right{
  display: flex;
  flex-wrap:wrap;
  flex-direction: column;
  align-items: center;
  width: 20%;
  text-align: center;
}
.cart__item .cart__item-title-right .save-whishlist{
  color:#44444D;
  font-size:11px;
  font-weight:300;
  line-height:15.03px;
  padding-bottom: 12px;
}
.cart__item .cart__price-old{
  color:#44444D;
  font-size:14px;
  font-weight:300;
  line-height:16px;
  text-decoration:line-through;
}
.cart__item .cart__price-old{
  color:#F5694D;
  font-size:14px;
  font-weight:300;
  line-height:16px;
}


