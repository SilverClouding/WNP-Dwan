<style>

  #shopify-section-{{section.id}} .section_width{
    width:{{section.settings.section_width}}%;
    margin: 0 auto;
  }

</style>
{% comment %}
<div class="section_width four-icons-sec">
<div class="image-with-text {% if section.settings.full_width %}image-with-text--full-width{% else %}page-width{% endif %} color-scheme-{{ section.settings.color_scheme }}">
  {%- for block in section.blocks -%}
  {% case block.type %}
  {%- when 'icon_text' -%}
  <div class="icon__text_item">
    <span>
      <img src="{{ block.settings.img | img_url: '50x' }}"alt="{{ block.settings.img.alt | escape }}">
    </span>
    {{block.settings.svg_icon1_text}}
  </div>
  {%- endcase -%}
  {%- endfor -%}
</div>
</div>
{% endcomment %}


<section class="section_width product-tabs color-accent-1 {% if section.settings.full_width %} image-with-text--full-width {% else %} page-width{% endif %} color-scheme-{{ section.settings.color_scheme }} gradient">
 
  product.metafields.icon.better_appetite
  product.metafields.accentuate.improved_digestion
  product.metafields.accentuate.reduce_ibs_ibd_symptoms
  product.metafields.icon.decreased_allergy
  product.metafields.icon.healthy_skin_coat
  product.metafields.accentuate.joint_health
  

<div class="above_description_icon_text">
  {%- for block in section.blocks -%}
  
  {% assign blockTitleHandle = block.settings.title | handle %}
  {{blockTitleHandle}}
  
  {% if blockTitleHandle contains 'better-appetite' and product.metafields.icon.better_appetite %}
  <div class="under_media_icon_text_item text-center"> 
  {% comment %}  <img src="{{ block.settings.img | img_url: '50x' }}"alt="{{ block.settings.img.alt | escape }}"> {% endcomment %}
    <div>
    {% render 'product-feature-icons', icon: block.settings.icons %}
    </div>
     
    <h2>{{ block.settings.title }}</h2> 
  </div>
  {% endif %}
 
  
  {% endfor %} 
</div>

</section>


