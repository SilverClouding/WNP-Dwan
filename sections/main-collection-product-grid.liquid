<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .left-section{
    width:20%;
  }
  .right-section{
    width:80%;
  }
  @media screen and (max-width: 769px) {
    .left-section{
      width:100%;
    }
    .right-section{
      width:100%;
    }
    img.banner__media-for-mobile {
      display: block;
    }
    img.banner__media-for-desktop{
      display:none;
    }
    .cols-banner .info h1{
      margin:0;
    }
    .cols-banner .info{
      left:20px;
      width: 50%;
    }
    .cols-banner img {
      object-fit: cover;
      object-position: 80%;
    }
    .spaced-section {
      margin-top: 0rem!important;
    }
  }
  .listCollection{
    display:flex;
    flex-wrap:wrap;
  }
  .cols-banner img {
    width: 100%;

  }
  .cols-banner .info {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 60px;
  }

  .cols-banner {
    position: relative;
  }

  .cols-banner .info h1 {
    margin-top: 0;
  }
  .color-none .card__text.card__text-spacing.card__text-hover p {
    margin: 0;
  }

  .swiper.main-collection-page_Swiper img {
    width: 100%;
  }
  .swiper {
    overflow: hidden;
    padding: 0 0px;
  }
  .collection_page_linklist h2 {
    font-size: 15px;
    font-weight: 800;
    line-height: 1.5;
    text-align: center;
    text-decoration: none!important;
  }

  .collection_page_linklist a {
    text-decoration: none!important;
  }
  .collection_page_linklist {
    margin: 0;
    padding: 0;
  }
  .swiper.main-collection-page_Swiper {
    border-bottom: 1px solid #D3D6D9;
    padding-bottom: 70px;
  }

  .swiper.main-collection-page_Swiper .swiper-scrollbar {
    margin-bottom: 35px;
  }
  .swiper.main-collection-page_Swiper:last-child {
    margin-bottom: 40px;
  }
  div#main-collection-filters {
    padding: 20px 0 0 0;
    border-bottom: 1px solid #d6d9dc;
  }

</style>


{% capture breadcrumb %}
{% render 'breadcrumb' %}
<div class="main-collection--product-grid left-side-sidebar">  
  
</div>
{% endcapture %}

